# ===== VPN Project Configuration (.env) =====
# Copy this file to `.env` in the same directory as the scripts.
# Values here override built-in defaults.

# WireGuard settings
WG_INTERFACE=wg0
WG_PORT=51820
WG_NETWORK=10.0.0.0/24
WG_DNS="8.8.8.8, 1.1.1.1"
# If empty, install.sh will autodetect external IP (recommended)
WG_ENDPOINT_IP=

# Paths
WG_DIR=/etc/wireguard
WG_CLIENTS_DIR=/etc/wireguard/clients

# Logging
# LOG_LEVEL: CRITICAL, ERROR, WARNING, INFO, DEBUG
LOG_LEVEL=INFO
# LOG_FILE: if set, Python manager will also log to this file. Disabled by default.
LOG_FILE=

# Security / Firewall
ALLOW_SSH_PORT=22
